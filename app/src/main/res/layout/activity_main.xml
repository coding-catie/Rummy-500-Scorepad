<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greenfelt">

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"/>
    <Button
        android:id="@+id/two_player_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/two_players"
        android:layout_below="@id/welcome_text"
        android:gravity="center_horizontal"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"/>
    <Button
        android:id="@+id/three_player_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/three_players"
        android:layout_below="@id/two_player_button"
        android:gravity="center_horizontal"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"/>
    <Button
        android:id="@+id/four_player_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/four_players"
        android:layout_below="@id/three_player_button"
        android:gravity="center_horizontal"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"/>

</RelativeLayout>